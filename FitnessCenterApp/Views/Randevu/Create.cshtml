@model FitnessCenterApp.Models.Randevu

@{
    ViewData["Title"] = "Yeni Randevu";
    bool isAdmin = User.IsInRole("Admin");
}

<h2 class="mb-4">Yeni Randevu</h2>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    @* ✅ ÜyeId: Admin يختار - Üye مخفي *@
    @if (isAdmin)
    {
        <div class="mb-3">
            <label asp-for="UyeId" class="form-label"></label>
            <select asp-for="UyeId"
                    class="form-select"
                    asp-items="@(ViewData["UyeId"] as SelectList)">
                <option value="">Üye seçiniz</option>
            </select>
            <span asp-validation-for="UyeId" class="text-danger"></span>
        </div>
    }
    else
    {
        <input asp-for="UyeId" type="hidden" />
    }

    <div class="mb-3">
        <label asp-for="AntrenorId" class="form-label"></label>
        <select asp-for="AntrenorId"
                class="form-select"
                asp-items="@(ViewData["AntrenorId"] as SelectList)">
            <option value="">Antrenör seçiniz</option>
        </select>
        <span asp-validation-for="AntrenorId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="SalonId" class="form-label"></label>
        <select asp-for="SalonId"
                class="form-select"
                asp-items="@(ViewData["SalonId"] as SelectList)">
            <option value="">Salon seçiniz</option>
        </select>
        <span asp-validation-for="SalonId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="HizmetId" class="form-label"></label>
        <select asp-for="HizmetId"
                class="form-select"
                asp-items="@(ViewData["HizmetId"] as SelectList)">
            <option value="">Hizmet seçiniz</option>
        </select>
        <span asp-validation-for="HizmetId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="TarihSaat" class="form-label"></label>

        <input asp-for="TarihSaat"
               type="datetime-local"
               class="form-control"
               step="60"
               value="@(Model.TarihSaat == default
                        ? DateTime.Now.AddMinutes(30).ToString("yyyy-MM-ddTHH:mm")
                        : Model.TarihSaat.ToString("yyyy-MM-ddTHH:mm"))" />

        <span asp-validation-for="TarihSaat" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Not" class="form-label"></label>
        <input asp-for="Not" class="form-control" />
        <span asp-validation-for="Not" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">İptal</a>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
