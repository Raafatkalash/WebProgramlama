@model FitnessCenterApp.Models.Randevu
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Randevu Düzenle";
}

<h2 class="mb-4">Randevu Düzenle</h2>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="UyeId" class="form-label"></label>
        <select asp-for="UyeId" class="form-select" asp-items="@(ViewData["UyeId"] as SelectList)">
            <option value="">Üye seçiniz</option>
        </select>
        <span asp-validation-for="UyeId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="AntrenorId" class="form-label"></label>
        <select asp-for="AntrenorId" class="form-select" asp-items="@(ViewData["AntrenorId"] as SelectList)">
            <option value="">Antrenör seçiniz</option>
        </select>
        <span asp-validation-for="AntrenorId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="SalonId" class="form-label"></label>
        <select asp-for="SalonId" class="form-select" asp-items="@(ViewData["SalonId"] as SelectList)">
            <option value="">Salon seçiniz</option>
        </select>
        <span asp-validation-for="SalonId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="HizmetId" class="form-label"></label>
        <select asp-for="HizmetId" class="form-select" asp-items="@(ViewData["HizmetId"] as SelectList)">
            <option value="">Hizmet seçiniz</option>
        </select>
        <span asp-validation-for="HizmetId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="TarihSaat" class="form-label"></label>
        <input class="form-control"
               type="datetime-local"
               name="TarihSaat"
               value="@Model.TarihSaat.ToString("yyyy-MM-ddTHH:mm")" />
        <span asp-validation-for="TarihSaat" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Not" class="form-label"></label>
        <input asp-for="Not" class="form-control" />
        <span asp-validation-for="Not" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">İptal</a>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
