@model IEnumerable<FitnessCenterApp.Models.Randevu>

@{
    ViewData["Title"] = "Randevu Listesi";
}

<div class="card page-card">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <div>
                <h2 class="page-title mb-1">Randevu Listesi</h2>
                <p class="text-muted mb-0">Üyeler için planlanan tüm randevular</p>
            </div>
            <a asp-action="Create" class="btn btn-primary btn-lg">
                <i class="bi bi-plus-circle me-1"></i> Yeni Randevu
            </a>
        </div>

        @if (!Model.Any())
        {
            <div class="alert alert-info mb-0">
                Şu anda kayıtlı randevu bulunmuyor. Yukarıdan <strong>Yeni Randevu</strong> ekleyebilirsin.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-clean align-middle">
                    <thead>
                        <tr>
                            <th>Üye</th>
                            <th>Antrenör</th>
                            <th>Salon</th>
                            <th>Tarih</th>
                            <th>Not</th>
                            <th class="text-end">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <span class="fw-semibold">
                                        @item.Uye?.Ad @item.Uye?.Soyad
                                    </span>
                                </td>
                                <td>@item.Antrenor?.Ad @item.Antrenor?.Soyad</td>
                                <td>@item.Salon?.Ad</td>
                                <td>
                                    <span class="badge bg-light text-dark border">
                                        @item.TarihSaat.ToString("dd.MM.yyyy HH:mm")
                                    </span>
                                </td>
                                <td>
                                    @if (!string.IsNullOrWhiteSpace(item.Not))
                                    {
                                        @item.Not
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash"></i> Sil
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
