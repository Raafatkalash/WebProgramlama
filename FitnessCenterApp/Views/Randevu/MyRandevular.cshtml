@model IEnumerable<FitnessCenterApp.Models.Randevu>

@{
    ViewData["Title"] = "Randevular";
}

<h2 class="mb-3">Randevu Listesi</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Yeni Randevu</a>
</p>

<table class="table table-bordered table-striped align-middle">
    <thead>
        <tr>
            <th>Üye</th>
            <th>Antrenör</th>
            <th>Salon</th>
            <th>Hizmet</th>
            <th>Tarih</th>
            <th>Not</th>
            <th>Durum</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
@foreach (var r in Model)
{
        <tr>
            <td>@r.Uye?.AdSoyad</td>
            <td>@r.Antrenor?.AdSoyad</td>
            <td>@r.Salon?.Ad</td>
            <td>@r.HizmetAdi</td>
            <td>@r.TarihSaat.ToString("dd.MM.yyyy HH:mm")</td>
            <td>@r.Not</td>
            <td>
                @if (r.IptalEdildi)
                {
                    <span class="badge bg-secondary">İptal</span>
                }
                else if (r.Onayli)
                {
                    <span class="badge bg-success">Onaylı</span>
                }
                else
                {
                    <span class="badge bg-warning text-dark">Bekliyor</span>
                }
            </td>
            <td class="d-flex gap-2">
                <a asp-action="Edit" asp-route-id="@r.Id" class="btn btn-sm btn-warning">Edit</a>

                @if (!r.IptalEdildi && !r.Onayli)
                {
                    <form asp-action="Onayla" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@r.Id" />
                        <button class="btn btn-sm btn-success" type="submit">Onayla</button>
                    </form>
                }

                @if (!r.IptalEdildi)
                {
                    <form asp-action="Delete" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@r.Id" />
                        <button class="btn btn-sm btn-danger" type="submit">İptal</button>
                    </form>
                }
            </td>
        </tr>
}
    </tbody>
</table>
