@model FitnessCenterApp.Models.Randevu

@{
    ViewData["Title"] = "Randevu Sil";
}

<h1>Randevu Sil</h1>

<h3>Bu randevuyu silmek istediğinize emin misiniz?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">Üye</dt>
        <dd class="col-sm-10">@Model.Uye?.Ad @Model.Uye?.Soyad</dd>

        <dt class="col-sm-2">Antrenör</dt>
        <dd class="col-sm-10">@Model.Antrenor?.Ad @Model.Antrenor?.Soyad</dd>

        <dt class="col-sm-2">Salon</dt>
        <dd class="col-sm-10">@Model.Salon?.Ad</dd>

        <dt class="col-sm-2">Tarih</dt>
        <dd class="col-sm-10">@Model.TarihSaat.ToString("g")</dd>

        <dt class="col-sm-2">Not</dt>
        <dd class="col-sm-10">@Model.Not</dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Sil</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>
