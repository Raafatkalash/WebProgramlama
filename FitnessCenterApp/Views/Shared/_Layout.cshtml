<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FitnessCenterApp</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
</head>

<body class="bg-light">
<header>
    <nav class="navbar navbar-expand-lg navbar-dark shadow-sm main-navbar">
        <div class="container">
            <a class="navbar-brand fw-bold d-flex align-items-center"
               asp-area="" asp-controller="Home" asp-action="Index">
                <i class="bi bi-activity me-2"></i>
                FitnessCenterApp
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain"
                    aria-controls="navbarMain" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarMain">

                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                    </li>

                    @* ✅ Admin Panel (CRUD) فقط Admin *@
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="adminDropdown"
                               role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Admin Panel
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                                <li><a class="dropdown-item" asp-controller="Uye" asp-action="Index">Üyeler</a></li>
                                <li><a class="dropdown-item" asp-controller="Antrenor" asp-action="Index">Antrenörler</a></li>
                                <li><a class="dropdown-item" asp-controller="Salon" asp-action="Index">Salonlar</a></li>
                                <li><a class="dropdown-item" asp-controller="Hizmet" asp-action="Index">Hizmetler</a></li>
                            </ul>
                        </li>
                    }

                    @* ✅ Randevular: لكل المستخدمين المسجلين *@
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Randevu" asp-action="Index">Randevular</a>
                        </li>
                    }

                    @* ✅ REST API (Admin) بدون أمثلة محرجة مثل uyeId=1 *@
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="raporDropdown"
                               role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Raporlar (REST API)
                            </a>

                            <ul class="dropdown-menu" aria-labelledby="raporDropdown">
                                <li>
                                    <a class="dropdown-item"
                                       href="/api/rapor/antrenor-randevu-sayisi"
                                       target="_blank">
                                        Antrenör Randevu Sayısı (JSON)
                                    </a>
                                </li>

                                <li><hr class="dropdown-divider" /></li>

                                @* ✅ صفحة UI للتقارير (بدون hardcode) — إذا ما عملتها بعد، احذف هذا السطر مؤقتاً *@
                                <li>
                                    <a class="dropdown-item"
                                       asp-controller="Raporlama"
                                       asp-action="Index">
                                        Raporlar (UI)
                                    </a>
                                </li>
                            </ul>
                        </li>
                    }

                    @* ✅ AI Integration (مسجلين) — إذا ما عندك AiController احذف هذا السطر *@
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Ai" asp-action="Index">AI Öneri</a>
                        </li>
                    }
                </ul>

                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Privacy">
                            <i class="bi bi-info-circle me-1"></i>Privacy
                        </a>
                    </li>

                    @* ✅ Login / Register / Logout *@
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <li class="nav-item">
                            <span class="nav-link text-white-50">
                                <i class="bi bi-person-circle me-1"></i>@User.Identity!.Name
                            </span>
                        </li>

                        <li class="nav-item">
                            <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="nav-link btn btn-link text-white">Logout</button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Register">Register</a>
                        </li>
                    }
                </ul>

            </div>
        </div>
    </nav>
</header>

<div class="page-wrapper py-4">
    <div class="container">
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">@TempData["Error"]</div>
        }
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">@TempData["Success"]</div>
        }

        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
</div>

<footer class="border-top footer text-muted mt-auto">
    <div class="container py-3 small">
        © @DateTime.Now.Year - FitnessCenterApp
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
@RenderSection("Scripts", required: false)
</body>
</html>
