@model FitnessCenterApp.Models.Salon

@{
    ViewData["Title"] = "Salon Düzenle";
}

<h1>Salon Düzenle</h1>
<hr />

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Ad" class="form-label"></label>
        <input asp-for="Ad" class="form-control" />
        <span asp-validation-for="Ad" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Adres" class="form-label"></label>
        <input asp-for="Adres" class="form-control" />
        <span asp-validation-for="Adres" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Sehir" class="form-label"></label>
        <input asp-for="Sehir" class="form-control" />
        <span asp-validation-for="Sehir" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Telefon" class="form-label"></label>
        <input asp-for="Telefon" class="form-control" />
        <span asp-validation-for="Telefon" class="text-danger"></span>
    </div>

    <div class="form-check mb-3">
        <input asp-for="Aktif" class="form-check-input" />
        <label asp-for="Aktif" class="form-check-label"></label>
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
