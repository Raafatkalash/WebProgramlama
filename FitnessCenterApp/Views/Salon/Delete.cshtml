@model FitnessCenterApp.Models.Salon

@{
    ViewData["Title"] = "Salon Sil";
}

<h1>Salon Sil</h1>
<hr />

<h3>Bu salonu silmek istediğinize emin misiniz?</h3>

<div class="mb-3">
    <dl class="row">
        <dt class="col-sm-2">Ad</dt>
        <dd class="col-sm-10">@Model.Ad</dd>

        <dt class="col-sm-2">Adres</dt>
        <dd class="col-sm-10">@Model.Adres</dd>

        <dt class="col-sm-2">Şehir</dt>
        <dd class="col-sm-10">@Model.Sehir</dd>

        <dt class="col-sm-2">Telefon</dt>
        <dd class="col-sm-10">@Model.Telefon</dd>

        <dt class="col-sm-2">Aktif</dt>
        <dd class="col-sm-10">@((Model.Aktif) ? "Evet" : "Hayır")</dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Sil</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>
