@model IEnumerable<FitnessCenterApp.Models.Antrenor>
@using System.Linq

@{
    ViewData["Title"] = "Antrenörler";
}

<h2>Antrenörler</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Yeni Antrenör</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Ad Soyad</th>
            <th>Uzmanlık</th>
            <th>Salon</th>
            <th>Hizmetler</th>
            <th>Müsait Saat</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var a in Model)
{
        <tr>
            <td>@a.AdSoyad</td>
            <td>@a.UzmanlikAlani</td>
            <td>@a.Salon?.Ad</td>
            <td>@string.Join(", ", a.Hizmetler.Select(h => h.Ad))</td>
            <td>@a.MusaitBaslangic - @a.MusaitBitis</td>
            <td>
                <a asp-action="Edit" asp-route-id="@a.Id" class="btn btn-sm btn-warning">Edit</a>
                <a asp-action="Delete" asp-route-id="@a.Id" class="btn btn-sm btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
